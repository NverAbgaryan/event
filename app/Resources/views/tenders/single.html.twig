{% extends "base.html.twig" %}

{% block body %}

    <section class="single-tenders-section">
        <div class="container">
            <div class="row single-tender-presentation">
                <div class="text-center">
                    <h4>{{ property.category }}</h4>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 tender-image">
                    <img src="{{ asset('img/example1.jpg') }}" alt="">
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 add-price">
                    <div class="text-center">
                        <a href="#" data-toggle="modal" data-target="#myModal"><button class="give-price">Առաջարկել գին</button></a>
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="add-your-price text-left">
                                            <h3 class="text-center">Առաջարկել գին</h3>
                                            <div class="form-group">
                                                <label for="comment">Ձեր Ծառաությունները կամ կարճ ինֆորմացիա</label>
                                                <textarea class="form-control" rows="5" id="comment"></textarea>
                                                <form>
                                                    <p>Ընտրեք վճարման տարբերակը</p>
                                                    <div class="checkbox">
                                                        <label><input type="checkbox" value="">Կանխիկ</label>
                                                    </div>
                                                    <div class="checkbox">
                                                        <label><input type="checkbox" value="">Անկանխիկ</label>
                                                    </div>
                                                    <p>Ընտրեք առաքման տարբերակը</p>
                                                    <div class="checkbox">
                                                        <label><input type="checkbox" value="">Տարբերակ 1</label>
                                                    </div>
                                                    <div class="checkbox">
                                                        <label><input type="checkbox" value="">Տարբերակ 2</label>
                                                    </div>
                                                    <label for="price">Առաջարկեք ձեր արժեքը</label><br>
                                                    <input type="text" id="price" placeholder="Առաջարկել գին">
                                                    <div class="text-center">
                                                        <a href="#"><button class="give-price">Առաջարկել</button></a>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row single-tender-description">
                <div class="text-center">
                    <h4>Մրցույթի տվյալներ</h4>
                </div>
                <div class="col-lg-2 col-md- col-sm-2"></div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12">
                    <p>Պատվիրատու <span class="item-description">{{ property.owner.companyName }}</span></p>
                    <p>Ապրանք <span class="item-description">{{ property.category }}</span></p>
                    <p>Ֆինանսավորման ձև
                        <span class="item-description">
                            {% if property.financing == 0 %} Անկանխիկ{% endif %}
                            {% if property.financing == 1 %} Կանխիկ{{ property.financing }} {% endif %}
                        </span>
                    </p>
                    <p>Առաքում <span class="item-description">{{ property.shipment }}</span></p>
                    <p>Հայտի ժամկետը <span class="item-description">{{ property.end|date("Y/m/d") }}</span></p>
                    <p>Բնութագիր</p>
                    <p>{{ property.overview }}</p>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-2"></div>
            </div>
            <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12 text-right">
                <a target="_blank" href="/uploads/files/{{ asset( property.file ) }}"><button class="download-pdf">Download PDF</button></a>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2"></div>
        </div>
    </section>
{% endblock %}