{% extends ":property:base.html.twig" %}

{% block body %}
    <div class="col-lg-9 col-md-9 col-sm-8 col-xs-12 create-tender">
        {{ form_start(form) }}
        <p>Ընտրել մրցույթի տեսակը</p>
        <div>
            {{ form_widget(form.type, {"id" : "select_type"}) }}
        </div>

        <p>Ընտրել ծառայության տեսակը</p>
        <div>
            {{ form_widget(form.category, {"id" : "select_category"}) }}
        </div>
        <div>
            <label for="range">Նշել ժամանակահատվածը</label><br>
            {#  <input type="text" name="daterange" id="range" value="Նշել ժամանակահատվածը" />#}
            {{ form_widget(form.start) }}
            {{ form_widget(form.end) }}
        </div>
       <div class="form-inline products">
              <div class="form-group">
                  <label for="product">Նշել Անունը</label><br>
                  <input type="text" name="product[product1][name]" id="product"/>
              </div>
              <div class="form-group">
                  <label for="qty">Քանակ</label><br>
                  <input name="product[product1][qty]" type="text" id="qty"  />
              </div>
              <div class="form-group">
                  <select name="product[product1][sizes]" class="choose-size">
                      <option disabled selected value="">Չ․միավոր</option>
                      <option value="հատ">հատ</option>
                      <option value="ք/մ">ք/մ</option>
                      <option value="կգ">կգ</option>
                  </select>
              </div>
              <div class="form-group">
                  <input type='file'  name='product[product1][image]' style=' margin-top:20px;' class='upload-image'> </a>
              </div>
            <button id="add-row" type="button">+</button>
        </div>

        <div class="form-inline service">
            <div class="form-group">
                <label for="product">Նշել Անունը</label><br>
                <input type="text" name="product[product1][name]" id="product"/>
            </div>
            <div class="form-group">
                <label for="qty">Քանակ</label><br>
                <input name="product[product1][qty]" type="text" id="qty"  />
            </div>
            <div class="form-group">
                <select name="product[product1][sizes]" class="choose-size">
                    <option value="հատ">հատ</option>
                    <option value="ք/մ">ք/մ</option>
                    <option value="կգ">կգ</option>
                </select>
            </div>
            <div class="form-group">
                <input type='file'  name='product[product1][image]' style=' margin-top:20px;' class='upload-image'> </a>
            </div>
        </div>
        <p>Ֆինանսավորման ձև</p>
        <div class="checkbox">
            {{ form_widget(form.financing) }}
        </div>
        <p>Ապահովագրություն</p>
        <div class="checkbox">
            {{ form_widget(form.insurance) }}
        </div>
        <p>Առաքում</p>
        <div class="checkbox">
            <label for="delivery"><input type="checkbox" value="">Այո</label>
            {{ form_widget(form.shipment) }}
        </div>
        <div class="checkbox">
            <label><input type="checkbox" value="">Ոչ</label>
        </div>
        <label for="depozit">Կանխավճար</label><br>
        {{ form_widget(form.advance) }}<br>
        <label for="budget">Մրցույթային բյուջեն</label><br>
        {{ form_widget(form.budget) }}<br>
        <label for="desc">Մրցույթի համառոտ բնութագիր</label>
        {{ form_widget(form.overview, { 'attr': {'class': 'form-control',"id":"desc","rows": 5}}) }}
        <label>Մրցույթի տեղնիկական բնութագիր</label>
        <a href="#">{{ form_widget(form.filePdf) }}</a>
        <div class="text-center">
            <a href="#">
                <button class="give-price">Ավելացնել</button>
            </a>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
{% block stylesheets %}
    <style>
        .products{
            display: none;
        }
        #add-row{
            display: none;
        }
    </style>
{% endblock %}